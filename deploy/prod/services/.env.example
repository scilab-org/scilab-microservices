############################################
#       ENVIRONMENT
############################################
COMPOSE_PROJECT_NAME=scilab-services

############################################
#       NGINX
############################################
NGINX_IMAGE_NAME=nginx:1.29.4

############################################
#       CERTBOT
############################################
CERTBOT_IMAGE_NAME=certbot/certbot:latest
CERTBOT_EMAIL=CHANGE_ME_EMAIL

############################################
#       DOMAIN CONFIGURATION
############################################
YARP_API_GATEWAY_DOMAIN=api.hyperdatalab.site
KEYCLOAK_HOSTNAME=auth.hyperdatalab.site
MINIO_HOSTNAME=minio.hyperdatalab.site

############################################
#         KEYCLOAK CLIENT SECRETS
############################################
# Web client secret (from Keycloak realm config)
KEYCLOAK_WEB_CLIENT_SECRET=CHANGE_ME_WEB_CLIENT_SECRET
# Service account secret (for backend-to-keycloak communication)
KEYCLOAK_SERVICE_ACCOUNT_SECRET=CHANGE_ME_SERVICE_ACCOUNT_SECRET

############################################
#          STORAGE / OBJECT STORE
############################################
MINIO_ROOT_USER=CHANGE_ME_MINIO_USER
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD

############################################
#         APPLICATION SERVICES
############################################
ASPNETCORE_ENVIRONMENT=Production

# Database connection strings
# Include Error Detail should be false in production
USER_DB_CONNECTION=Server=CHANGE_ME_DB_HOST;Port=5432;Database=user_service_db;User Id=CHANGE_ME_DB_USER;Password=CHANGE_ME_DB_PASSWORD;Include Error Detail=false;
MANAGEMENT_DB_CONNECTION=Server=CHANGE_ME_DB_HOST;Port=5432;Database=management_service_db;User Id=CHANGE_ME_DB_USER;Password=CHANGE_ME_DB_PASSWORD;Include Error Detail=false;
LAB_DB_CONNECTION=Server=CHANGE_ME_DB_HOST;Port=5432;Database=lab_service_db;User Id=CHANGE_ME_DB_USER;Password=CHANGE_ME_DB_PASSWORD;Include Error Detail=false;

############################################
#         CORS
############################################
CORS_ORIGIN=https://your-frontend-domain.com

############################################
#         LOGGING
# Serilog console log level: Debug | Information | Warning | Error | Fatal
############################################
CONSOLE_LOG_LEVEL=Information

############################################
#         OBSERVABILITY / TRACING
# OTLP endpoint for both Serilog and DistributedTracing
############################################
OTLP_ENDPOINT=http://otel-collector:4317
